{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.1.0",
    "parameters": {
        "timestamp": {
            "type":"string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "dc1",
            "apiVersion": "2016-04-30-preview",
            "location": "eastus",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "dc1",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https', '://azlabdata', parameters('timestamp'), '.blob.core.windows.net', '/vhds/dc1.vhd')]"
                        },
                        "caching": "ReadWrite"
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                            "name": "dc1-data",
                            "createOption": "Empty",
                            "vhd": {
                                "uri": "[concat('https', '://azlabdata', parameters('timestamp'), '.blob.core.windows.net', '/vhds/dc1-data.vhd')]"
                            },
                            "caching": "ReadOnly",
                            "diskSizeGB": 1023
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "dc1",
                    "adminUsername": "cloudadmin",
                    "adminPassword": "Pass@word1234",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": false
                    },
                    "secrets": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'dc1')]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https', '://azlabdiags', parameters('timestamp'), '.blob.core.windows.net', '/')]"
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', concat('azlabdata', parameters('timestamp')))]",
                "[resourceId('Microsoft.Network/networkInterfaces', 'dc1')]",
                "[resourceId('Microsoft.Storage/storageAccounts', concat('azlabdiags', parameters('timestamp')))]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "utility",
            "apiVersion": "2016-04-30-preview",
            "location": "eastus",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "utility",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('https', '://azlabdata', parameters('timestamp'), '.blob.core.windows.net', '/vhds/utility.vhd')]"
                        },
                        "caching": "ReadWrite"
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                            "name": "utility-data",
                            "createOption": "Empty",
                            "vhd": {
                                "uri": "[concat('https', '://azlabdata', parameters('timestamp'), '.blob.core.windows.net', '/vhds/utility-data.vhd')]"
                            },
                            "caching": "ReadOnly",
                            "diskSizeGB": 1023
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "utility",
                    "adminUsername": "cloudadmin",
                    "adminPassword": "Pass@word1234",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": false
                    },
                    "secrets": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'utility1')]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https', '://azlabdiags', parameters('timestamp'), '.blob.core.windows.net', '/')]"
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', concat('azlabdata', parameters('timestamp')))]",
                "[resourceId('Microsoft.Network/networkInterfaces', 'utility')]",
                "[resourceId('Microsoft.Storage/storageAccounts', concat('azlabdiags', parameters('timestamp')))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "dc1",
            "apiVersion": "2017-03-01",
            "location": "eastus",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "10.3.1.4",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', concat('vnet', parameters('timestamp'))), '/subnets/default')]"
                            }
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableIPForwarding": false
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', concat('vnet', parameters('timestamp')))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "utility",
            "apiVersion": "2017-03-01",
            "location": "eastus",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "10.3.1.5",
                            "privateIPAllocationMethod": "Static",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'utility')]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', concat('vnet', parameters('timestamp'))), '/subnets/default')]"
                            }
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableIPForwarding": false
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', 'utility')]",
                "[resourceId('Microsoft.Network/virtualNetworks', concat('vnet', parameters('timestamp')))]"
            ]
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "utility",
            "apiVersion": "2017-03-01",
            "location": "eastus",
            "properties": {
                "publicIPAllocationMethod": "Static",
                "idleTimeoutInMinutes": 4
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat('vnet', parameters('timestamp'))]",
            "apiVersion": "2017-03-01",
            "location": "eastus",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.3.1.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.3.1.0/24"
                        }
                    }
                ],
                "virtualNetworkPeerings": []
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Premium"
            },
            "kind": "Storage",
            "name": "[concat('azlabdata', parameters('timestamp'))]",
            "apiVersion": "2016-01-01",
            "location": "eastus",
            "tags": {},
            "properties": {},
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[concat('azlabdiags', parameters('timestamp'))]",
            "apiVersion": "2016-01-01",
            "location": "eastus",
            "tags": {},
            "properties": {},
            "dependsOn": []
        }
    ]
}